<p id="notice"></p>
<h1>Projetos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Descrição</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Mostrar', project_path(project), class: 'btn btn-info' %></td>
        <td><%= link_to 'Editar', edit_project_path(project), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Remover', project_path(project), class: 'btn btn-danger',
        method: :delete, data: { title: 'Atenção', confirm: 'Confirma exclusão? Ação irreversível!',
          commit: 'Remover', cancel: 'Cancelar' }%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Novo Projeto', new_project_path, class: 'btn btn-primary' %>
