<div class="form-group">
  <%= s.label :initial_date %>
  <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
    <div class="input-group-addon">
      <i class="fa fa-calendar"></i>
    </div>
  <%= datepicker_input s, :initial_date %>
</div>
</div>
<div class="form-group">
  <%= s.label :final_date %>
  <div class="input-group date" data-provide="datepicker" data-date-format="dd/mm/yyyy">
    <div class="input-group-addon">
      <i class="fa fa-calendar"></i>
    </div>
  <%= datepicker_input s, :final_date %>
</div>
</div>

<script>
    $('.input-group.date').datepicker({
    	format: 'dd/mm/yyyy',
    	language: 'pt-BR',
    	todayHighlight: true
    });
</script>
