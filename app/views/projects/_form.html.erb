<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sx-12">
    <%= form_for(project) do |f| %>
    <%= render 'errors', project: @project %>
    <div class="form-group">
      <%= f.label 'Descrição' %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
    <div class="form-group row">
      <div class="col-2">
        <%= f.label 'Cliente' %>
      </div>

      <div class="col-10">
      <%= f.collection_select(:client_id, @clients, :id, :name, class: 'form-control') %>
    </div>
    </div>
    <%= f.fields_for :schedule do |s| %>
      <%= render 'schedules/fields', s: s, schedule: @schedule %>
    <% end %>
    <div class="actions">
      <%= f.submit 'Salvar', class: 'btn btn-primary btn-block' %>
    </div>
    <% end %>
  </div>
</div>
